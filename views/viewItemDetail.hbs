<html>

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if ($("#counter").val() == '0') {
                $("#decreament").prop("disabled", true);
            }

            $("#increament").click(function () {
                let count = $("#counter").val();
                $("#counter").val(Number(count) + 1);
                if (count == '0') {
                    $("#decreament").prop("disabled", false);
                }
            });

            $("#decreament").click(function () {
                let count = $("#counter").val();
                $("#counter").val(Number(count) - 1);
                if (count == '1') {
                    $("#decreament").prop("disabled", true);
                }

            });

        });
    </script>
    <style>
        th{
            width: 40%;
        }
        h2{
            margin-bottom: 2%;
            margin-top: 2%;
            text-align: center;
        }
    </style>
</head>

<body>
    <h2>Food-Description</h2>
