        <table class="table text-center ">
            <tr>
                <th style="padding-top: 10%">Food Image</th>
                <td><img src="/upload/{{data.Imageid}}" width="35%" style="border-radius: 5px; height: 30vh"><br><br></td>
            </tr>
            <tr>
